<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:background="@color/white"
        android:elevation="12dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="28dp">

        <TextView
            android:id="@+id/tv_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/fredoka_semi_bold"
            android:gravity="center"
            android:text="Appointment Details"
            android:textColor="#111111"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="18dp" />

        <!-- Pet Name -->
        <TextView
            android:id="@+id/tv_pet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pet Name:"
            android:textStyle="bold"
            android:textColor="#111111"
            android:textSize="17sp"
            android:fontFamily="@font/fredoka_semi_bold" />

        <!-- Care Type -->
        <TextView
            android:id="@+id/tv_care_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Care Type:"
            android:textColor="#7F8C8D"
            android:textSize="16sp"
            android:fontFamily="@font/fredoka_semi_bold" />

        <!-- Service -->
        <TextView
            android:id="@+id/tv_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service:"
            android:textColor="#7F8C8D"
            android:textSize="16sp"
            android:fontFamily="@font/fredoka_semi_bold" />

        <!-- Date & Time -->
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date &amp; Time:"
            android:textColor="#1976D2"
            android:textSize="16sp"
            android:fontFamily="@font/fredoka_semi_bold"
            android:layout_marginTop="6dp" />

        <!-- Total -->
        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total:"
            android:textColor="#F0BB22"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="@font/fredoka_semi_bold"
            android:layout_marginTop="6dp" />

        <Button
            android:id="@+id/btn_pay_now"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="10dp"
            android:elevation="16dp"
            android:backgroundTint="#91C674"
            android:fontFamily="@font/fredoka_semi_bold"
            android:text="PAY NOW"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_pay_counter"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#F0BB22"
            android:fontFamily="@font/fredoka_semi_bold"
            android:elevation="1dp"
            android:text="PAY AT THE COUNTER"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:elevation="16dp"
            android:backgroundTint="#E54D4D"
            android:fontFamily="@font/fredoka_semi_bold"
            android:text="CANCEL"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>