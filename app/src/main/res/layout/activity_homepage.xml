<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top Header -->
    <ImageView
        android:id="@+id/r0r0xajskckc2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/recta_r" />

    <ScrollView
        android:id="@+id/rxqlnv89gic"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rjsrlnz2p6ek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="14dp"
                android:paddingBottom="1dp">

                <!-- CARD: My Pets (Full Modern Design) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_my_pets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="18dp"
                    android:backgroundTint="#FFFFFF"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Header Row with Paw Icon and Title -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/pet"
                                app:tint="@color/black" />

                            <TextView
                                android:id="@+id/my_pets_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/fredoka_semi_bold"
                                android:text="My Pets"
                                android:textColor="#131314"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Horizontally scrollable row of pets -->
                        <HorizontalScrollView
                            android:id="@+id/pets_scroll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:overScrollMode="ifContentScrolls"
                            android:scrollbars="none">

                            <LinearLayout
                                android:id="@+id/pets_container"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" />
                        </HorizontalScrollView>

                        <!-- Create Pet button below pets row for easy access -->
                        <Button
                            android:id="@+id/btn_create_pet_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_gravity="end"
                            android:layout_marginTop="12dp"
                            android:backgroundTint="@color/button2"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="2dp"
                            android:text="+ Create Pet Profile"
                            android:fontFamily="@font/fredoka_semi_bold"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Recommendations -->
                <TextView
                    android:id="@+id/r6os8hf9ab1a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="37dp"
                    android:layout_marginBottom="6dp"
                    android:text="Recommendations"
                    android:fontFamily="@font/fredoka_semi_bold"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <!-- Horizontally scrollable Recommendations Products -->
                <HorizontalScrollView
                    android:id="@+id/products_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="ifContentScrolls"
                    android:scrollbars="none"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="36dp">

                    <LinearLayout
                        android:id="@+id/products_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Product 1 -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/prod_rabies_vaccine"
                            android:layout_width="180dp"
                            android:layout_height="105dp"
                            android:layout_marginEnd="12dp"
                            android:backgroundTint="#FFFFFF"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:padding="10dp">

                                <ImageView
                                    android:layout_width="65dp"
                                    android:layout_height="56dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/rabies_bottle" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/fredoka_medium"
                                    android:text="Rabies Vaccination"
                                    android:textColor="#000000"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Product 2 -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/prod_distemper_vaccine"
                            android:layout_width="180dp"
                            android:layout_height="105dp"
                            android:layout_marginEnd="12dp"
                            android:backgroundTint="#FFFFFF"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:padding="10dp">

                                <ImageView
                                    android:layout_width="65dp"
                                    android:layout_height="56dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/distemper_bottle" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/fredoka_medium"
                                    android:text="Distemper Vaccination"
                                    android:textColor="#000000"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Product 3 -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/prod_silver_paw"
                            android:layout_width="180dp"
                            android:layout_height="105dp"
                            android:layout_marginEnd="12dp"
                            android:backgroundTint="#FFFFFF"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:padding="10dp">

                                <ImageView
                                    android:layout_width="65dp"
                                    android:layout_height="56dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/board_3" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/fredoka_medium"
                                    android:text="Silver Paw Lounge"
                                    android:textColor="#000000"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Product 4 -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/prod_combo_collar"
                            android:layout_width="180dp"
                            android:layout_height="105dp"
                            android:backgroundTint="#FFFFFF"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:padding="10dp">

                                <ImageView
                                    android:layout_width="65dp"
                                    android:layout_height="56dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/gromm_3" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/fredoka_medium"
                                    android:text="Combo and Collar"
                                    android:textColor="#000000"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </HorizontalScrollView>

                <!-- CARD: Appointment Status (EXPANDABLE) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/appointment_status_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="18dp"
                    android:layout_marginBottom="24dp"
                    android:backgroundTint="#F5F5F5"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <!-- Header row: Appointment Status, History, Expand icon -->
                        <LinearLayout
                            android:id="@+id/appointment_status_header"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/appointment_status_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/fredoka_semi_bold"
                                android:text="Appointment Status"
                                android:textColor="#000000"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="4dp"
                                android:layout_weight="1" />

                            <ImageView
                                android:id="@+id/expand_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@android:drawable/arrow_down_float" />
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/appointments_recycler"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_margin="4dp"
                            android:visibility="gone" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Layout (unchanged) -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_gravity="bottom"
        android:background="@color/button2"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:weightSum="4"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/home_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                android:tint="@color/black"
                tools:ignore="UseAppTint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOME"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:fontFamily="@font/fredoka_semi_bold"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_navigation_calendar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_calendar"
                android:tint="@color/gray_400"
                tools:ignore="UseAppTint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BOOKINGS"
                android:textSize="10sp"
                android:textColor="@color/gray_400"
                android:fontFamily="@font/fredoka_semi_bold"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/notif"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_bell"
                android:tint="@color/gray_400"
                tools:ignore="UseAppTint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOTIFICATION"
                android:textSize="10sp"
                android:textColor="@color/gray_400"
                android:fontFamily="@font/fredoka_semi_bold"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/prof"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_user"
                android:tint="@color/gray_400"
                tools:ignore="UseAppTint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROFILE"
                android:textSize="10sp"
                android:textColor="@color/gray_400"
                android:fontFamily="@font/fredoka_semi_bold"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>