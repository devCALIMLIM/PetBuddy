<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/forgot_password_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp">

    <ImageView
        android:id="@+id/logo2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="PetBuddy logo with a paw print"
        android:src="@mipmap/onboarding_screen" />

    <TextView
        android:id="@+id/forgot_password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:fontFamily="@font/fredoka_semi_bold"

        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <EditText
        android:id="@+id/forgot_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your email"
        android:fontFamily="@font/fredoka_regular"
        android:background="@drawable/onboarding_asset1"
        android:paddingStart="40dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"        android:inputType="textEmailAddress"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/send_verification_btn"
        android:layout_width="match_parent"
        android:fontFamily="@font/fredoka_medium"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:backgroundTint="@color/button1"
        android:elevation="16dp"
        android:text="Send Verification Code" />
</LinearLayout>