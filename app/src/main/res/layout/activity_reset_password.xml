<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="PetBuddy logo with a paw print"
        android:src="@mipmap/onboarding_screen" />

    <TextView
        android:id="@+id/reset_password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:fontFamily="@font/fredoka_semi_bold"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <EditText
        android:id="@+id/new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New Password"
        android:fontFamily="@font/fredoka_regular"
        android:background="@drawable/onboarding_asset1"
        android:paddingStart="40dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:inputType="textPassword"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:fontFamily="@font/fredoka_regular"
        android:background="@drawable/onboarding_asset1"
        android:paddingStart="40dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:inputType="textPassword"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/save_password_btn"
        android:layout_width="match_parent"
        android:fontFamily="@font/fredoka_semi_bold"
        android:backgroundTint="@color/button1"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:elevation="16dp"
        android:text="Save Password" />
</LinearLayout>